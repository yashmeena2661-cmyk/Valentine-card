<body>

  <!-- Background Music -->
  <audio id="bgMusic" loop>
    <source src="song.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
  </audio>

  <div class="container">
    <div id="intro">
      <h1>From Yash ‚ù§Ô∏è</h1>
      <p>Hey cutie... made this little surprise just for you üòä</p>
    </div>

    <div class="question">Will you be my Valentine?</div>
    <div class="buttons">
      <button id="yesBtn">YES üòç</button>
      <button id="noBtn">NO üò≠</button>
    </div>

    <div id="cardsSection">
      <h2>Choose a card to see a photo of you ‚ú®</h2>
      <div class="card-container">
        <div class="card" onclick="revealPhoto(1)"></div>
        <div class="card" onclick="revealPhoto(2)"></div>
        <div class="card" onclick="revealPhoto(3)"></div>
      </div>
      <div id="revealedPhoto">
        <img id="photoImg" src="" alt="Your beautiful photo">
      </div>
    </div>
  </div>

  <script>
    const music = document.getElementById('bgMusic');
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const cardsSection = document.getElementById('cardsSection');
    const photoImg = document.getElementById('photoImg');
    const revealedPhoto = document.getElementById('revealedPhoto');

    // Start music on first click/tap (browsers block autoplay without interaction)
    document.body.addEventListener('click', function startMusic() {
      music.play().catch(() => console.log("Autoplay blocked, waiting for interaction"));
      document.body.removeEventListener('click', startMusic);
    }, { once: true });

    // Yes button ‚Üí show cards
    yesBtn.addEventListener('click', () => {
      document.querySelector('.question').innerText = "Yayyy! ‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è";
      cardsSection.style.display = 'block';
      // Optional: add confetti or more animation later if you want
    });

    // No button dodges cursor
    noBtn.addEventListener('mouseover', (e) => {
      const rect = noBtn.getBoundingClientRect();
      const offsetX = e.clientX - rect.left - rect.width / 2;
      const offsetY = e.clientY - rect.top - rect.height / 2;
      const move = 120; // dodge distance in pixels
      noBtn.style.transform = `translate(${offsetX > 0 ? -move : move}px, ${offsetY > 0 ? -move : move}px)`;
    });
    noBtn.addEventListener('mouseout', () => {
      noBtn.style.transform = 'translate(0,0)';
    });

    // Reveal photo when card clicked
    function revealPhoto(num) {
      photoImg.src = `photo${num}.jpg`;
      revealedPhoto.style.display = 'block';
      // Scroll to photo if needed
      revealedPhoto.scrollIntoView({ behavior: 'smooth' });
    }
  </script>

</body>
